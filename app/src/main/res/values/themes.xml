<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Zeppelin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_1</item>
        <item name="colorPrimaryVariant">@color/primary_2</item>
        <item name="colorOnPrimary">@color/primary_3</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_1</item>
        <item name="colorSecondaryVariant">@color/secondary_2</item>
        <item name="colorOnSecondary">@color/secondary_3</item>

        <!-- Accent brand color -->
        <item name="colorAccent">@color/accent_1</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="1">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.VesselDatabase" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:background">@color/secondary_1</item>
        <item name="android:buttonStyle">@style/buttonStyle</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="vesselListName">
        <item name="android:textSize">26sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="vesselName">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
    </style>

    <style name="vesselDescription">
        <item name="android:textSize">30sp</item>
        <item name="android:padding">30dp</item>
    </style>

    <style name="buttonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/primary_1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">30sp</item>
    </style>
</resources>